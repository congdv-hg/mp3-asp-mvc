@model mp3.mvc.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="/images/logo.png" style="max-width:60px;" id="icon" alt="User Icon" />
        </div>
        <h4>Register</h4>
        <!-- Register Form -->
        <form method="post" asp-action="register">
            <input type="hidden" name="requestpath" id="requestpath" value="@ViewBag.RequestPath" />
            <div class="mb-1 mx-3 fadeIn first">
                <input type="text" name="username" class="form-control"  aria-describedby="emailHelp" placeholder="Username">
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="mb-1 mx-3 fadeIn first">
                <input type="text" name="displayName" class="form-control" aria-describedby="emailHelp" placeholder="Display name">
                <span asp-validation-for="displayName" class="text-danger"></span>
            </div>
            <div class="mb-1 mx-3 fadeIn first">
                <select class="form-select custom-select" name="gender" aria-label="Default select example">
                    <option selected value="0">Male</option>
                    <option value="1">Female</option>
                    <option value="2">Other</option>
                </select>
            </div>
            
            <div class="mb-1 mx-3 fadeIn second">
                <input type="date" name="dob" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="dob" class="text-danger"></span>
            </div>
            <div class="mb-1 mx-3 fadeIn second">
                <input type="password" name="password" class="form-control" placeholder="Password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="mb-1 mx-3 fadeIn second">
                <input type="password" name="repeatedPassword" class="form-control"  placeholder="ConfirmPassword">
                <span asp-validation-for="repeatedPassword" class="text-danger"></span>
            </div>
            <div class="mb-1 mx-3 fadeIn second">
                <input type="text" name="address" class="form-control" placeholder="Address">
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <input type="submit" class="fadeIn fourth" value="Register">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <div class="text-dark" style="font-size:12px;">Already have an account? </div>
            <a class="underlineHover" asp-action="login"> Login</a>
        </div>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
