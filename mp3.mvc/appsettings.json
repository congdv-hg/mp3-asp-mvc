{
  "Serilog": {
    "Using": [ "Serilog.Enrichers.ClientInfo" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId", "WithClientIp", "WithClientAgent" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log_.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{ClientIp} {ClientAgent}] [{Level:u3}] {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DatabaseConnection": "Server=localhost;Port=5432;Database=mine_music;User Id=user1;Password=abc1234;"
  },
  "DatabaseSettings": {
    "DatabaseType": "postgres",
    "AutoMigration": false
  }
}
